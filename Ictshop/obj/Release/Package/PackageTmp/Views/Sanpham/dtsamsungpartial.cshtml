@using Ictshop.Models;
@model List<Sanpham>
    <style>
        .muahang-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: red;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .muahang-button:hover {
                background-color: #338043;
            }
    </style>
<div class="row">
    <div class=" bg-danger"><h3 style="padding-left:20px"> SAMSUNG </h3></div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~/HinhanhSP/" + item.Anhbia) class="img-responsive" alt="" width="300" height="300" />
            </a>
                <center>
                    <h3> @item.Tensp</h3>
                    <h3 style="color:red">Giá: @item.Giatien VND</h3>
                    <br />
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                    {
                        <input type="submit" class="muahang-button" value="Mua hàng" id="bgnGioHang" />

                    }

                    @*<h4> <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@


                </center>

</div>
    }


